{
  "name": "anroots/pgca",
  "description": "Analyzes Git commit messages for poor committing practices and reports a list of violations",
  "keywords": [
    "pgca",
    "git",
    "commit",
    "commit analysis",
    "commit message"
  ],
  "homepage": "https://github.com/anroots/pgca",
  "license": "MIT",
  "authors": [
    {
      "name": "Ando Roots",
      "email": "ando@sqroot.eu",
      "homepage": "http://sqroot.eu",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "symfony/console": "~2.6",
    "symfony/dependency-injection": "~2.6",
    "symfony/config": "~2.6",
    "dflydev/dot-access-data": "~1.0",
    "gitonomy/gitlib": "~0.1.7",
    "swearjar/swearjar":"~0.1",
    "mustache/mustache":"~2.8"
  },
  "suggest": {
    "knplabs/github-api": "Allows to use the GitHub provider"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.5",
    "phpmd/phpmd": "~2.2",
    "fzaninotto/faker": "~1.4",
    "squizlabs/php_codesniffer": "~2.3",
    "phpmd/phpmd" : "~2.2"
  },
  "autoload": {
    "psr-4": {
      "Anroots\\Pgca\\": "src/Anroots/Pgca"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Anroots\\Pgca\\Test\\": "tests"
    }
  },
  "bin": ["bin/pgca"],
  "config": {
    "optimize-autoloader": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
