#!/usr/bin/env php
<?php

$autoloadLocations = array(
    __DIR__ . '/../../../autoload.php',
    __DIR__.'/../vendor/autoload.php'
);

foreach ($autoloadLocations as $file) {
    if (file_exists($file)) {
        require $file;
    }
}

use Anroots\Pgca\Cli\Application;
use Anroots\Pgca\Cli\Command\Analyze\FileSystemCommand;

$application = new Application('PHP Git Commit Analyzer');
$application->add(new FileSystemCommand);
$application->run();
